<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XWingsMobile.Views.Escaner">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Escanejar QR"  
                x:Name="btnScan"  
            />
            
            <Label x:Name="lblLast" IsVisible="False" Text="Ultima peça escanejada"/>
            <Label 
                HorizontalOptions="CenterAndExpand" x:Name="lblNom" FontAttributes="Bold" FontSize="Large"
            />

            <Label 
                HorizontalOptions="CenterAndExpand" x:Name="lblInstr"
            />
            <Button Text="Obrir Instruccions PDF" x:Name="btnPDF" IsVisible="False"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>