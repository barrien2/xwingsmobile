<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XWingsMobile.Views.Inici">
    <ContentPage.Content>
        <StackLayout>
            <Label HorizontalOptions="Center"  Text="Fem login" FontSize="20"
               />

            <StackLayout HorizontalOptions="Center" VerticalOptions="CenterAndExpand">



                <Entry Placeholder="Nom d'usuari" x:Name="entryUser"></Entry>
                <Entry Placeholder="Contrasenya" x:Name="entryPasswd" IsPassword="True"></Entry>
                <Button Text="Entrar" x:Name="btnLogin"></Button>

            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>